import java.io.IOException;
import java.io.PrintWriter;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class MyServlet extends HttpServlet {

    @Override
    public void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        response.setContentType("text/html");
        response.getWriter().println("<html><body><h2>Hello, World!</h2></body></html>");
    }
}


<!DOCTYPE html>
<html>
<head>
    <title>MyServlet Example</title>
</head>
<body>
    <h1>MyServlet Example</h1>
    <p>This is a simple example of a web page that interacts with the MyServlet.</p>
    
    <p>Click the button to get a greeting:</p>
    <form action="D:\basic programs\Tomcat 8.5\webapps\servlets\WEB-INF\classes\MyServlet" method="GET">
        <button type="submit">Get Greeting</button>
    </form>
</body>
</html>
